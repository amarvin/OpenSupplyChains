<h4><%= (this.local_stop_id ? this.getAttr("name", this.instance_id) : this.getAttr("name", "new stop")) %></h4>
<form name="edit-stop">
<input type="hidden" name="instance" value="<%= this.instance_id %>" />
<label for="name">Name:</label><br />
<input class="name" type="text" name="name" value="<%= this.getAttr("org.sourcemap.name", "name", "") %>" /><br />
<label for="placename">Location:</label><br />
<input class="placename" type="text" name="placename" value="<%= this.getAttr("org.sourcemap.placename", "placename", "") %>" />
</form>
