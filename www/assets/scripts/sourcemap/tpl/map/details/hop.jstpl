<h2 id="detail-title"><%= _S.htesc(this.hop.getAttr("name", "Stop")) %></h2>
<% if(this.hop.attributes.placename != undefined) { %><h3 id="detail-placename"><span class="placename"><%= this.hop.attributes.placename %></span></h3><% } %>

<% if(this.magic_word === "description") { %>
    <% if(this.hop.getAttr("description", false) && this.hop.getAttr("description").length > 1) { %>
        <div class="description"><%= _S.htesc(this.hop.getAttr("description")) %></div>
    <% } %>
    <% if(this.hop.getAttr("block:greenfact", false)) { %>
        <div class="block greenfact"><%= _S.htesc(this.hop.getAttr("block:greenfact")) %></div>
    <% } %>
    <% if(this.hop.getAttr("url:moreinfo", false)) { %>
        <div class="url moreinfo"> 
            <%= $("<a></a>").attr("href", this.hop.getAttr("url:moreinfo"))
                .text(this.hop.getAttr("urltitle:moreinfo", "Learn More")).attr("target", "blank")
                .wrap("<div></div>").parent().html() %>
        </div>
    <% } %>
<% } %>
<% if(this.magic_word === "greenfact" && this.hop.getAttr("greenfact", false)) { %><div class="greenfact"><h3>Sustainability Fact</h3><%= _S.tlinkify(_S.htesc(this.hop.getAttr("greenfact"))) %></div><% } %>
<% if(this.magic_word === "youtube:link" && this.hop.getAttr("youtube:link", false)) { %><%= this.embed.magic.youtube.link(this.hop.getAttr("youtube:link")) %><% } %>
<% if(this.magic_word === "vimeo:link" && this.hop.getAttr("vimeo:link", false)) { %><%= this.embed.magic.vimeo.link(this.hop.getAttr("vimeo:link")) %><% } %>
<% if(this.magic_word === "flickr:setid" && this.hop.getAttr("flickr:setid", false)) {  %>
<div id="flickr-photoset-<%= this.hop.getAttr("flickr:setid") %>">
<%= this.embed.magic.flickr.setid.call(this.embed, this.hop.getAttr("flickr:setid")) %>
</div>
<% } %>
<div class="content-nav">
<% for(var i=0; i<this.embed.magic_word_sequence.length; i++) { %>
    <% if(this.hop.getAttr(this.embed.magic_word_sequence[i], false)) { %>
        <div id="content-item-<%= i %>" class="content-item <%= _S.htesc(this.embed.magic_word_sequence[i].replace(/\W+/, "-")) %><%= (this.magic_word === this.embed.magic_word_sequence[i] ? " selected" : "") %>">
            <a href="javascript: void(0);"></a>
        </div>  
    <% } %>
<% } %>
<div class="clear"></div>
</div>
