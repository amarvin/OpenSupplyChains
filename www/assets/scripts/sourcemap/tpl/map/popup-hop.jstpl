<div class="popup-wrapper">
    <h4 class="popup-title"><%= _S.ttrunc(this.hop.getAttr("name", "Transit"), 16) %></h4>
    <h5 class="popup-placename"><%= _S.ttrunc(_S.htesc(this.hop.getAttr("placename", "")), 24) %></h5>
    <% if(this.hop.getAttr("description", false)) { %><p class="popup-description"><%= _S.ttrunc(_S.htesc(this.hop.getAttr("description","")), 64, true) %></p><% } %>
    <% if(this.morelink) {%><a class="popup-more-link" href="javascript: void(0);">More</a><% } %>
</div>
